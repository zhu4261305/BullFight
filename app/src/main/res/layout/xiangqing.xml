<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/number_base">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/vp_container_main"
        android:orientation="vertical"

        >
        <ImageView
            android:id="@+id/image_qiuchang"
            android:scaleType="fitXY"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/l1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:background="#ffffff"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iconfont2"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/zuobiao"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="hahah"
                android:textSize="15dp"
                android:layout_gravity="center"
                style="@style/Smile.TextView._Black"/>
            <TextView
                android:id="@+id/daohang"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                style="@style/Smile.TextView._Black"
                android:text="xxxxx"
                android:singleLine="true"
                android:layout_marginLeft="60dp"
                android:layout_gravity="center"
                android:paddingLeft="15dp"/>





        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#ffffff"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="230dp"

                        android:layout_height="wrap_content"
                        style="@style/Smile.TextView._Black"
                        android:layout_marginLeft="5dp"
                        android:text="红色钱包"
                        android:singleLine="true"
                        ></TextView>
                    <TextView
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/number_base"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                    <RelativeLayout
                        android:layout_width="100dp"

                        android:layout_height="match_parent">
                        <com.example.my.baidu.View.RoundImageView
                            android:id="@+id/user_logo_navi"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_launcher"
                            android:scaleType="centerInside"
                            android:layout_centerInParent="true"></com.example.my.baidu.View.RoundImageView>

                        <TextView
                            android:id="@+id/mingzi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hahahah"
                            style="@style/Smile.TextView._Black"
                            android:layout_marginLeft="10dp"
                           android:textSize="10sp"
                            android:layout_below="@+id/user_logo_navi"
                            android:layout_alignStart="@+id/user_logo_navi" />

                    </RelativeLayout>



                </LinearLayout>

              <LinearLayout
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <LinearLayout
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:background="#ffffff"
                      android:layout_marginTop="10dp"
                      android:layout_width="230dp"
                      android:layout_height="70dp"
                      >
                      <TextView
                          android:id="@+id/tv_describe"
                          android:layout_width="230dp"

                          android:layout_height="wrap_content"
                          style="@style/Smile.TextView._Black"
                          android:layout_marginLeft="5dp"
                          android:text="红色钱包"
                          android:singleLine="true"
                          ></TextView>








                  </LinearLayout>
                  <Button
                      android:id="@+id/qunliao"
                      android:layout_gravity="center"
                      android:layout_width="45dp"
                      android:layout_height="40dp"
                      android:layout_marginTop="6dp"
                      android:layout_marginLeft="30dp"
                      android:background="@drawable/qunliao"/>

              </LinearLayout>






                </LinearLayout>







        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <GridView
            android:id="@+id/wanjia"
            android:layout_width="wrap_content"
            android:layout_height="118dp"
            android:layout_alignParentTop="true"
            android:numColumns="4"
            ></GridView>

    </LinearLayout>


    <RadioGroup
        android:id="@+id/rd_main"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
        <RadioButton
            android:id="@+id/zan"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="观望"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/number_base"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"/>
        <Button
            android:background="@color/white"
            android:id="@+id/jiaru"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="加入"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/number_base"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"/>
        <RadioButton
            android:id="@+id/zhuanfa"
            android:button="@null"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="赞"
            android:textSize="20sp"
            android:gravity="center"/>







    </RadioGroup>


</LinearLayout>
