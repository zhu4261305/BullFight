<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/include_add_top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/zhandui"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>
        <EditText
            android:id="@+id/edit_title"
            android:paddingLeft="10dp"
            android:hint="@string/title_hint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_edit_height"
            android:layout_margin="7dp"
            android:background="@drawable/input"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tuandui"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>
        <EditText
            android:id="@+id/edit_photo"
            android:paddingLeft="10dp"
            android:hint="@string/photo_hint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_edit_height"
            android:layout_margin="7dp"

            android:background="@drawable/input"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
 <ImageView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:background="@drawable/yinliao"
     android:layout_gravity="center"
     android:layout_marginLeft="5dp"/>
    <EditText
        android:id="@+id/edit_describe"
        android:hint="@string/describe_hint"
        android:background="@drawable/input"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="7dp"
        android:minLines="4"
        />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shijian"
            android:layout_marginLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间:"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textColor="@color/black"/>



    </LinearLayout>
    <EditText
        android:id="@+id/inputDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:inputType="none"
        android:background="@drawable/input"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>


    <TextView
        android:id="@+id/choose"
        android:hint="@string/describe_hint"
        android:background="@drawable/input"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="15sp"
       android:textColor="@color/black"
        android:text="选择球场"
        />

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rootview"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"></RelativeLayout>

</LinearLayout>