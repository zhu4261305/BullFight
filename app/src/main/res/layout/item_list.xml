<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            style="@style/Smile.TextView._Black"
            android:text="红色钱包"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            >
        </TextView>

        <TextView
            android:id="@+id/tv_describe"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:text="周三早上丢失了"
            style="@style/Smile.TextView._Gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:minLines="1"
            android:maxLines="2"
            android:textSize="16sp"
            >
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shijiana"
                android:layout_gravity="bottom"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginLeft="10dp"
                android:text="20130240122"
                style="@style/Smile.TextView._Black"
                android:textSize="12sp"
                android:layout_below="@id/tv_describe"
                android:layout_gravity="bottom"
                >
            </TextView>
        </LinearLayout>



    </LinearLayout>
   <RelativeLayout
       android:layout_width="120dp"
       android:layout_height="match_parent"
       android:orientation="vertical">
       <com.example.my.baidu.View.RoundImageView
           android:id="@+id/item_image"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_marginRight="15dp"

           android:src="@drawable/ic_launcher"
           android:scaleType="centerInside"
           android:contentDescription="@null"
          android:layout_alignParentRight="true"
           />
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/item_image"
           android:background="@drawable/yangsheng"
           android:layout_marginTop="2dp"
           android:layout_marginLeft="15dp"/>
       <TextView
           android:layout_below="@+id/item_image"
           android:layout_marginLeft="35dp"
           android:id="@+id/tv_place"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="地点"
           style="@style/bottom_tab"
           android:textSize="15sp"

           />
   </RelativeLayout>






</LinearLayout>